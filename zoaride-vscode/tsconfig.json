{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "es2017"
        ],
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "sourceMap": true,
        "preserveWatchOutput": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
